                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp" />-->

            <!--<View
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1" />-->
        </RelativeLayout>
        </LinearLayout>
    <!--</ScrollView>-->

    <include layout="@layout/wizard_welcome" />

</LinearLayout>